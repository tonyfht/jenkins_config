<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>check</artifactId>
    <groupId>es.iam.calidad.check</groupId>
    <version>${check.version}</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>check-main</artifactId>
  <name>CHECK-Main</name>
  <description>Main del Analizador de chequeos previos al despliegue</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>es.iam.calidad.check:check-neg</include>
                  <include>es.iam.calidad.check:check-main</include>
                </includes>
              </artifactSet>
              <transformers>
                <transformer>
                  <mainClass>es.iam.check.analisisDespliegues.batch.Main</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <archive>
            <manifest>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
              <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
              <mainClass>es.iam.check.analisisDespliegues.batch.Main</mainClass>
            </manifest>
            <manifestEntries>
              <Class-Path>./conf/</Class-Path>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>

